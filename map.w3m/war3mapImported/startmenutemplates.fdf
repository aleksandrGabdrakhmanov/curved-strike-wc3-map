Frame "BACKDROP" "StartGameMenu" {
    Width 0.4,
    Height 0.45,
    DecorateFileNames,
    BackdropTileBackground,
    BackdropBackground  "EscMenuBackground",
    BackdropCornerFlags "UL|UR|BL|BR|T|L|B|R",
    BackdropCornerSize  0.048,
    BackdropBackgroundSize  0.256,
    BackdropBackgroundInsets 0.01 0.01 0.01 0.01,
    BackdropEdgeFile  "EscMenuBorder",
    BackdropBlendAll,
    Frame "Frame" "StartGameMenuUnits" {
        Width 0.28,
        Height 0.15,
        SetPoint TOPLEFT, "StartGameMenu", TOPLEFT, 0.02, -0.01,
        Frame "TEXT" "StartGameMenuModeText" INHERITS "EscMenuTitleTextTemplate" {
            SetPoint TOPLEFT, "StartGameMenuUnits", TOPLEFT, 0.02, -0.01,
            Text "Available units:",
        }
    }
    Frame "Frame" "StartGameMenuHeroes" {
        Width 0.28,
        Height 0.15,
        SetPoint TOP, "StartGameMenuUnits", BOTTOM, 0, 0,
        Frame "TEXT" "StartGameMenuHeroesText" INHERITS "EscMenuTitleTextTemplate" {
            SetPoint TOPLEFT, "StartGameMenuHeroes", TOPLEFT, 0.02, -0.01,
            Text "Available heroes:",
        }
    }
    Frame "Frame" "StartGameMenuMode" {
        Width 0.28,
        Height 0.06,
        SetPoint BOTTOMLEFT, "StartGameMenu", BOTTOMLEFT, 0.03, 0.03,
        Frame "TEXT" "StartGameMenuModeText" INHERITS "EscMenuTitleTextTemplate" {
            SetPoint LEFT, "StartGameMenuMode", LEFT, 0, 0.015,
            Text "Mode:",
        }
        Frame "GLUETEXTBUTTON" "CurvedButton" INHERITS WITHCHILDREN "ScriptDialogButton"  {
            Width 0.08,
            SetPoint LEFT, "StartGameMenuModeText", RIGHT, 0.01, 0,
            ButtonText "GameplayButtonText",
            Frame "TEXT" "GameplayButtonText" INHERITS "EscMenuButtonTextTemplate" {
                Text "DIRECT",
            }
        }
        Frame "GLUETEXTBUTTON" "UnitedButton" INHERITS WITHCHILDREN "ScriptDialogButton"  {
            Width 0.08,
            SetPoint LEFT, "CurvedButton", RIGHT, 0.01, 0,
            ButtonText "GameplayButtonText",
            Frame "TEXT" "GameplayButtonText" INHERITS "EscMenuButtonTextTemplate" {
                Text "UNITED",
            }
        }
        Frame "GLUETEXTBUTTON" "RoyalButton" INHERITS WITHCHILDREN "ScriptDialogButton"  {
            Width 0.08,
            SetPoint LEFT, "UnitedButton", RIGHT, 0.01, 0,
            ButtonText "GameplayButtonText",
            Frame "TEXT" "GameplayButtonText" INHERITS "EscMenuButtonTextTemplate" {
                Text "BATTLE ROYAL",
            }
        }
    }
     Frame "TEXT" "StartGameMenuModeSelecting" INHERITS "EscMenuTitleTextTemplate" {
        SetPoint TOP, "StartGameMenuMode", BOTTOM, 0, -0.015,
        FontColor 0.0 1.0 0.0 1.0,
        Text "are selecting",
     }
}

